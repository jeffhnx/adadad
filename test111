-- Head Tracking Aimbot with Full Body ESP (Enemies Red, Teammates Green, 100% Sensitivity)

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local Camera = Workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer
local aimbotEnabled = false -- Aimbot starts off

local espObjects = {} -- Table to hold ESP objects for easy management

-- Function to find the closest enemy player to the center of the screen
local function getClosestPlayerToCenter()
    local closestPlayer = nil
    local closestDistance = math.huge -- Set to a high number initially

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
            local headPosition = player.Character.Head.Position
            local screenPosition, onScreen = Camera:WorldToScreenPoint(headPosition)

            if onScreen then
                -- Calculate the distance from the screen center
                local screenCenter = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)
                local distanceFromCenter = (Vector2.new(screenPosition.X, screenPosition.Y) - screenCenter).Magnitude

                if distanceFromCenter < closestDistance then
                    closestDistance = distanceFromCenter
                    closestPlayer = player
                end
            end
        end
    end

    return closestPlayer
end

-- Function to instantly snap aim to a player's head (100% sensitivity)
local function aimAtHead(player)
    if player and player.Character and player.Character:FindFirstChild("Head") then
        local headPosition = player.Character.Head.Position

        -- Snap camera directly to the head position (100% sensitivity)
        Camera.CFrame = CFrame.new(Camera.CFrame.Position, headPosition)
    end
end

-- Function to create ESP for a player's whole body
local function createESP(player)
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        -- Create a box for the whole character
        local espBox = Instance.new("BoxHandleAdornment")
        espBox.Adornee = player.Character.HumanoidRootPart
        espBox.Size = player.Character.HumanoidRootPart.Size + Vector3.new(0, 3, 0) -- Slightly larger for visibility
        espBox.Transparency = 0.5
        espBox.AlwaysOnTop = true

        if player.TeamColor == LocalPlayer.TeamColor then
            -- Teammate (Green)
            espBox.Color3 = Color3.fromRGB(0, 255, 0)
        else
            -- Enemy (Red)
            espBox.Color3 = Color3.fromRGB(255, 0, 0)
        end

        espBox.Parent = player.Character.HumanoidRootPart
        espObjects[player] = espBox -- Store the ESP object
    end
end

-- Function to remove ESP from a player
local function removeESP(player)
    if espObjects[player] then
        espObjects[player]:Destroy()
        espObjects[player] = nil
    end
end

-- Function to update ESP for all players every 1 second
local function updateESP()
    while true do
        -- Remove old ESP objects
        for player, esp in pairs(espObjects) do
            if player.Character == nil or not player.Character:FindFirstChild("HumanoidRootPart") then
                removeESP(player)
            end
        end

        -- Apply ESP to all players
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and not espObjects[player] then
                createESP(player)
            end
        end

        wait(1) -- Refresh ESP every 1 second
    end
end

-- Aimbot loop (activated by holding right mouse button)
local function aimbotLoop()
    while aimbotEnabled do
        local targetPlayer = getClosestPlayerToCenter()
        if targetPlayer then
            aimAtHead(targetPlayer) -- Instantly snap to head
        end
        wait(0.01) -- Very small wait time to ensure 100% sensitivity
    end
end

-- Toggle aimbot with right mouse button hold
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then -- Right mouse button
        aimbotEnabled = true
        aimbotLoop() -- Start the aimbot loop when right mouse is held
    end
end)

UserInputService.InputEnded:Connect(function(input, gameProcessedEvent)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then -- Right mouse button
        aimbotEnabled = false -- Stop aimbot when right mouse is released
    end
end)

-- Apply ESP to all players in the game and start the refresh loop
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        wait(1) -- Wait for character to load
        createESP(player)
    end)
end)

-- Initial call to update ESP and start the refresh loop
spawn(updateESP)
