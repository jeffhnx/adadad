--// Services
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

--// Variables
local AimbotEnabled = false
local ESPEnabled = false
local AimbotStrength = 0.1 -- Default sensitivity for how quickly to aim at the target
local RightControlHeld = false
local AimKey = Enum.KeyCode.LeftControl -- Default aim key
local refreshRate = 1 -- seconds
local GUIVisible = false

--// Create GUI
local gui = Instance.new("ScreenGui")
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")
gui.Enabled = false -- Start with the GUI hidden

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0.3, 0, 0.35, 0)
frame.Position = UDim2.new(0.7, 0, 0.6, 0)
frame.BackgroundTransparency = 0.2
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

-- ESP Toggle
local espToggle = Instance.new("TextButton", frame)
espToggle.Size = UDim2.new(0.8, 0, 0.2, 0)
espToggle.Position = UDim2.new(0.1, 0, 0.1, 0)
espToggle.Text = "ESP: OFF"
espToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
espToggle.BackgroundColor3 = Color3.fromRGB(70, 70, 70)

espToggle.MouseButton1Click:Connect(function()
    ESPEnabled = not ESPEnabled
    espToggle.Text = "ESP: " .. (ESPEnabled and "ON" or "OFF")
end)

-- Aimbot Toggle
local aimbotToggle = Instance.new("TextButton", frame)
aimbotToggle.Size = UDim2.new(0.8, 0, 0.2, 0)
aimbotToggle.Position = UDim2.new(0.1, 0, 0.35, 0)
aimbotToggle.Text = "Aimbot: OFF"
aimbotToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
aimbotToggle.BackgroundColor3 = Color3.fromRGB(70, 70, 70)

aimbotToggle.MouseButton1Click:Connect(function()
    AimbotEnabled = not AimbotEnabled
    aimbotToggle.Text = "Aimbot: " .. (AimbotEnabled and "ON" or "OFF")
end)

-- Circular Slider for Sensitivity
local sliderContainer = Instance.new("Frame", frame)
sliderContainer.Size = UDim2.new(0.5, 0, 0.5, 0)
sliderContainer.Position = UDim2.new(0.25, 0, 0.55, 0)
sliderContainer.BackgroundTransparency = 1

local sliderCircle = Instance.new("ImageButton", sliderContainer)
sliderCircle.Size = UDim2.new(0.5, 0, 0.5, 0)
sliderCircle.Position = UDim2.new(0.25, 0, 0.25, 0)
sliderCircle.Image = "rbxassetid://6031097227" -- Set to a circular image asset
sliderCircle.BackgroundTransparency = 1
sliderCircle.Rotation = AimbotStrength * 360

sliderCircle.MouseButton1Down:Connect(function()
    local mouse = LocalPlayer:GetMouse()
    
    local function updateSlider()
        local relativeX = (mouse.X - sliderContainer.AbsolutePosition.X) / sliderContainer.AbsoluteSize.X
        AimbotStrength = math.clamp(relativeX, 0, 1)
        sliderCircle.Rotation = AimbotStrength * 360
    end

    updateSlider()
    local dragConnection
    dragConnection = mouse.Move:Connect(updateSlider)
    mouse.Button1Up:Connect(function()
        dragConnection:Disconnect()
    end)
end)

--// Toggle GUI with Right Shift Key
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightShift then
        GUIVisible = not GUIVisible
        gui.Enabled = GUIVisible
    end
end)

--// Aimbot Function
local function Aimbot()
    if RightControlHeld and AimbotEnabled then
        local closestPlayer = nil
        local closestDistance = math.huge

        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
                if player.Team ~= LocalPlayer.Team then
                    local targetPosition = player.Character.Head.Position
                    local distance = (Camera.CFrame.Position - targetPosition).Magnitude

                    if distance < closestDistance then
                        closestDistance = distance
                        closestPlayer = player
                    end
                end
            end
        end

        if closestPlayer then
            local targetPosition = closestPlayer.Character.Head.Position
            local newCFrame = CFrame.new(Camera.CFrame.Position, targetPosition)
            Camera.CFrame = Camera.CFrame:Lerp(newCFrame, AimbotStrength)
        end
    end
end

--// Input Handling for Aim Key
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == AimKey then
        RightControlHeld = true
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.KeyCode == AimKey then
        RightControlHeld = false
    end
end)

--// Run Service Loop
RunService.RenderStepped:Connect(function()
    Aimbot()
end)
