local player = game.Players.LocalPlayer
local gui = script.Parent

-- Functions for button actions
local function showStats()
    print("Displaying player stats...")
end

local function showKillList()
    print("Displaying kill list...")
end

local function showSettings()
    print("Displaying settings...")
end

-- Button references
local statsButton = gui:WaitForChild("TextButton") -- Adjust the name accordingly
local killListButton = gui:WaitForChild("TextButton") -- Adjust the name accordingly
local settingsButton = gui:WaitForChild("TextButton") -- Adjust the name accordingly

-- Connect button actions
statsButton.MouseButton1Click:Connect(showStats)
killListButton.MouseButton1Click:Connect(showKillList)
settingsButton.MouseButton1Click:Connect(showSettings)

-- Function to toggle GUI visibility
local function toggleGui()
    gui.Enabled = not gui.Enabled
end

-- Bind the toggle function to the "G" key
local userInputService = game:GetService("UserInputService")

userInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.G and not gameProcessed then
        toggleGui()
    end
end)
