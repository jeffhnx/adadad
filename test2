--// Services
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

--// Variables
local AimbotEnabled = false
local ESPEnabled = false
local TeamCheckEnabled = false
local AimSmoothing = 0 -- Controls aim smoothing
local AimKey = Enum.UserInputType.MouseButton2 -- Default to right-click

--// UI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.Visible = false
MainFrame.Parent = ScreenGui

-- Title
local TitleLabel = Instance.new("TextLabel")
TitleLabel.Text = "Aimbot Settings"
TitleLabel.Size = UDim2.new(1, 0, 0, 30)
TitleLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.TextScaled = true
TitleLabel.Parent = MainFrame

-- Toggle Aimbot Button
local ToggleAimbotButton = Instance.new("TextButton")
ToggleAimbotButton.Text = "Toggle Aimbot: OFF"
ToggleAimbotButton.Size = UDim2.new(1, -10, 0, 30)
ToggleAimbotButton.Position = UDim2.new(0, 5, 0, 40)
ToggleAimbotButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ToggleAimbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleAimbotButton.Parent = MainFrame

-- Toggle Team Check Button
local ToggleTeamCheckButton = Instance.new("TextButton")
ToggleTeamCheckButton.Text = "Toggle Team Check: OFF"
ToggleTeamCheckButton.Size = UDim2.new(1, -10, 0, 30)
ToggleTeamCheckButton.Position = UDim2.new(0, 5, 0, 80)
ToggleTeamCheckButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ToggleTeamCheckButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleTeamCheckButton.Parent = MainFrame

-- Set Aim Key Button
local SetAimKeyButton = Instance.new("TextButton")
SetAimKeyButton.Text = "Set Aim Key: Right Click"
SetAimKeyButton.Size = UDim2.new(1, -10, 0, 30)
SetAimKeyButton.Position = UDim2.new(0, 5, 0, 120)
SetAimKeyButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
SetAimKeyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SetAimKeyButton.Parent = MainFrame

-- Smoothing Slider
local SmoothingLabel = Instance.new("TextLabel")
SmoothingLabel.Text = "Smoothing: 0"
SmoothingLabel.Size = UDim2.new(1, -10, 0, 30)
SmoothingLabel.Position = UDim2.new(0, 5, 0, 160)
SmoothingLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
SmoothingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
SmoothingLabel.TextScaled = true
SmoothingLabel.Parent = MainFrame

-- Toggle GUI visibility with Right Shift
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightShift then
        MainFrame.Visible = not MainFrame.Visible
    end
end)

-- Toggle Aimbot Function
ToggleAimbotButton.MouseButton1Click:Connect(function()
    AimbotEnabled = not AimbotEnabled
    ToggleAimbotButton.Text = "Toggle Aimbot: " .. (AimbotEnabled and "ON" or "OFF")
end)

-- Toggle Team Check Function
ToggleTeamCheckButton.MouseButton1Click:Connect(function()
    TeamCheckEnabled = not TeamCheckEnabled
    ToggleTeamCheckButton.Text = "Toggle Team Check: " .. (TeamCheckEnabled and "ON" or "OFF")
end)

-- Set Aim Key Function
SetAimKeyButton.MouseButton1Click:Connect(function()
    SetAimKeyButton.Text = "Press New Aim Key"
    local connection
    connection = UserInputService.InputBegan:Connect(function(input)
        if input.UserInputType ~= Enum.UserInputType.MouseMovement then
            AimKey = input.UserInputType
            SetAimKeyButton.Text = "Set Aim Key: " .. tostring(AimKey)
            connection:Disconnect()
        end
    end)
end)

-- Smoothing Adjustment (cycle between 0 and 10)
SmoothingLabel.MouseButton1Click:Connect(function()
    AimSmoothing = (AimSmoothing + 1) % 11
    SmoothingLabel.Text = "Smoothing: " .. AimSmoothing
end)

-- Aimbot Function
local function Aimbot()
    if AimbotEnabled then
        local closestPlayer = nil
        local closestDistance = math.huge

        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and (not TeamCheckEnabled or player.Team ~= LocalPlayer.Team) and player.Character and player.Character:FindFirstChild("Head") then
                local targetPosition = player.Character.Head.Position
                local distance = (Camera.CFrame.Position - targetPosition).Magnitude
                if distance < closestDistance then
                    closestDistance = distance
                    closestPlayer = player
                end
            end
        end

        if closestPlayer and UserInputService:IsMouseButtonPressed(AimKey) then
            local targetPosition = closestPlayer.Character.Head.Position
            local cameraCFrame = CFrame.new(Camera.CFrame.Position, targetPosition)
            Camera.CFrame = Camera.CFrame:Lerp(cameraCFrame, AimSmoothing / 10)
        end
    end
end

-- Run Service Loop
RunService.RenderStepped:Connect(Aimbot)
