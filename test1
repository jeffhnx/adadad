--// Services
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

--// Variables
local GUIVisible = true
local AimbotStrength = 0.5

--// Create ScreenGui and GUI elements
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 2
MainFrame.Visible = GUIVisible
MainFrame.Parent = ScreenGui

local ToggleButton = Instance.new("TextButton")
ToggleButton.Size = UDim2.new(0, 100, 0, 40)
ToggleButton.Position = UDim2.new(0, 10, 0, 10)
ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleButton.Text = "Toggle GUI"
ToggleButton.Parent = MainFrame

local SliderLabel = Instance.new("TextLabel")
SliderLabel.Size = UDim2.new(0, 100, 0, 30)
SliderLabel.Position = UDim2.new(0, 10, 0, 60)
SliderLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
SliderLabel.Text = "Aimbot Strength"
SliderLabel.Parent = MainFrame

local Slider = Instance.new("Frame")
Slider.Size = UDim2.new(0, 200, 0, 10)
Slider.Position = UDim2.new(0, 10, 0, 100)
Slider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Slider.Parent = MainFrame

local SliderKnob = Instance.new("Frame")
SliderKnob.Size = UDim2.new(0, 20, 0, 20)
SliderKnob.Position = UDim2.new(0, 0, 0, -5)
SliderKnob.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
SliderKnob.Parent = Slider

local SliderInput = Instance.new("TextLabel")
SliderInput.Size = UDim2.new(0, 100, 0, 30)
SliderInput.Position = UDim2.new(0, 10, 0, 150)
SliderInput.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
SliderInput.Text = "Strength: " .. tostring(AimbotStrength)
SliderInput.Parent = MainFrame

--// Toggle GUI visibility
ToggleButton.MouseButton1Click:Connect(function()
    GUIVisible = not GUIVisible
    MainFrame.Visible = GUIVisible
end)

--// Slider functionality
SliderKnob.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local dragging = true
        local startPos = input.Position.X

        local function updateSlider()
            if dragging then
                local delta = input.Position.X - startPos
                local newX = math.clamp(delta, 0, Slider.AbsoluteSize.X - SliderKnob.AbsoluteSize.X)
                SliderKnob.Position = UDim2.new(0, newX, 0, -5)

                -- Update Aimbot Strength based on the slider position
                AimbotStrength = (newX / (Slider.AbsoluteSize.X - SliderKnob.AbsoluteSize.X)) * 2
                SliderInput.Text = "Strength: " .. math.round(AimbotStrength * 100) / 100
            end
        end

        local function stopDragging()
            dragging = false
        end

        -- Connect events for dragging
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                stopDragging()
            end
        end)

        -- Update slider while dragging
        RunService.RenderStepped:Connect(updateSlider)
    end
end)

--// Make sure the GUI is visible when the script runs
MainFrame.Visible = true
