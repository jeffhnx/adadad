-- LocalScript for Valblox with Aimbot, ESP, Team Checker, and Squares

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local Camera = workspace.CurrentCamera
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local aimbotEnabled = false -- Aimbot starts off
local espEnabled = false -- ESP starts off
local espObjects = {} -- Table to hold ESP objects for easy management

-- Function to find the closest enemy player head to the center of the screen
local function getClosestEnemyToCenter()
    local closestPlayer = nil
    local closestDistance = math.huge

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
            local head = player.Character:FindFirstChild("Head")
            if head and player.Team ~= LocalPlayer.Team then -- Check if the player is on the enemy team
                local headPosition, onScreen = Camera:WorldToScreenPoint(head.Position)

                if onScreen then
                    local screenCenter = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)
                    local distanceFromCenter = (Vector2.new(headPosition.X, headPosition.Y) - screenCenter).Magnitude

                    if distanceFromCenter < closestDistance then
                        closestDistance = distanceFromCenter
                        closestPlayer = player
                    end
                end
            end
        end
    end

    return closestPlayer
end

-- Function to aim at a player's head with a slight upward offset
local function aimAtPlayer(player)
    if player and player.Character then
        local head = player.Character:FindFirstChild("Head")
        if head then
            local aimPosition = head.Position + Vector3.new(0, 0.5, 0) -- Adjust the Y offset here (0.5 studs higher)
            Camera.CFrame = CFrame.new(Camera.CFrame.Position, aimPosition) -- Aim directly at the adjusted position
        end
    end
end

-- Function to create glowing ESP for a player
local function createESP(player)
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local highlight = Instance.new("Highlight")
        highlight.Adornee = player.Character.HumanoidRootPart
        highlight.FillTransparency = 0.5 -- Set the fill transparency (0 is opaque, 1 is transparent)
        highlight.OutlineTransparency = 0 -- No outline transparency
        highlight.Enabled = true

        -- Set glow color based on team
        if player.Team == LocalPlayer.Team then
            highlight.FillColor = Color3.fromRGB(0, 255, 0) -- Teammates (Green)
        else
            highlight.FillColor = Color3.fromRGB(255, 0, 0) -- Enemies (Red)
        end

        highlight.Parent = player.Character.HumanoidRootPart
        espObjects[player] = highlight -- Store the ESP object

        -- Create a square around the player
        local square = Instance.new("Frame")
        square.Size = UDim2.new(0, 50, 0, 50) -- Size of the square
        square.BackgroundTransparency = 0.5
        square.BorderSizePixel = 0
        square.Parent = game.CoreGui -- Add square to CoreGui for visibility
        espObjects[player].Square = square -- Store the square in the espObjects table

        -- Update square position every frame
        RunService.RenderStepped:Connect(function()
            if espEnabled and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local position, onScreen = Camera:WorldToScreenPoint(player.Character.HumanoidRootPart.Position)
                if onScreen then
                    square.Position = UDim2.new(0, position.X - 25, 0, position.Y - 25) -- Center the square on the player
                    if player.Team == LocalPlayer.Team then
                        square.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Teammates (Green)
                    else
                        square.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Enemies (Red)
                    end
                    square.Visible = true
                else
                    square.Visible = false
                end
            else
                square.Visible = false
            end
        end)
    end
end

-- Function to remove ESP from a player
local function removeESP(player)
    if espObjects[player] then
        espObjects[player]:Destroy() -- Remove highlight
        espObjects[player].Square.Visible = false -- Hide the square
        espObjects[player].Square:Destroy() -- Remove square
        espObjects[player] = nil
    end
end

-- Function to update ESP for all players every 1 second
local function updateESP()
    while espEnabled do
        -- Remove old ESP objects
        for player, esp in pairs(espObjects) do
            if player.Character == nil or not player.Character:FindFirstChild("HumanoidRootPart") then
                removeESP(player)
            end
        end

        -- Apply ESP to all players
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and not espObjects[player] then
                createESP(player)
            end
        end

        wait(1) -- Refresh ESP every 1 second
    end
end

-- Aimbot loop (activated by holding right mouse button)
local function aimbotLoop()
    while aimbotEnabled do
        local targetPlayer = getClosestEnemyToCenter() -- Get the closest enemy player to the center
        if targetPlayer then
            aimAtPlayer(targetPlayer) -- Aim at the enemy player
        end
        wait(0.01) -- Small wait time for smooth aiming
    end
end

-- Toggle aimbot with right mouse button hold
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then -- Right mouse button
        aimbotEnabled = true
        aimbotLoop() -- Start the aimbot loop when right mouse is held
    end
end)

UserInputService.InputEnded:Connect(function(input, gameProcessedEvent)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then -- Right mouse button
        aimbotEnabled = false -- Stop aimbot when right mouse is released
    end
end)

-- Toggle ESP with L key
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if input.KeyCode == Enum.KeyCode.L then
        espEnabled = not espEnabled -- Toggle ESP on/off
        if espEnabled then
            updateESP() -- Start updating ESP if enabled
        else
            -- Remove ESP for all players if disabled
            for player in pairs(espObjects) do
                removeESP(player)
            end
        end
    end
end)

-- Create ESP for existing players when the script runs
for _, player in pairs(Players:GetPlayers()) do
    if player.Character then
        createESP(player)
    end
end

-- Refresh ESP for players when they join
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        wait(1) -- Wait for the character to fully load
        createESP(player)
    end)
end)
