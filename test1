-- Kill Aura Script Example
local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local range = 15 -- The radius of the kill aura

RunService.Heartbeat:Connect(function()
    for _, target in pairs(game.Players:GetPlayers()) do
        if target ~= player and target.Character and target.Character:FindFirstChild("Humanoid") then
            local targetPosition = target.Character.PrimaryPart.Position
            local playerPosition = player.Character.PrimaryPart.Position

            local distance = (playerPosition - targetPosition).Magnitude
            if distance <= range then
                if target.Character.Humanoid.Health > 0 then
                    target.Character.Humanoid:TakeDamage(10) -- Deal damage to the target
                end
            end
        end
    end
end)
