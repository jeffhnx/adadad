--// Services
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local UserInputService = game:GetService("UserInputService")

--// Variables
local LocalPlayer = Players.LocalPlayer

--// Create GUI
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TitleLabel = Instance.new("TextLabel")
local StatsButton = Instance.new("TextButton")
local KillListButton = Instance.new("TextButton")
local SettingsButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")

--// Configure GUI properties
ScreenGui.Name = "MurderMystery2GUI"
ScreenGui.Parent = StarterGui

MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0.3, 0, 0.5, 0)
MainFrame.Position = UDim2.new(0.35, 0, 0.25, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.BorderSizePixel = 0
MainFrame.BackgroundTransparency = 0.2
MainFrame.Parent = ScreenGui

TitleLabel.Name = "TitleLabel"
TitleLabel.Size = UDim2.new(1, 0, 0.1, 0)
TitleLabel.Position = UDim2.new(0, 0, 0, 0)
TitleLabel.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
TitleLabel.Text = "Murder Mystery 2"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 24
TitleLabel.Parent = MainFrame

StatsButton.Name = "StatsButton"
StatsButton.Size = UDim2.new(0.9, 0, 0.1, 0)
StatsButton.Position = UDim2.new(0.05, 0, 0.15, 0)
StatsButton.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
StatsButton.Text = "View Stats"
StatsButton.TextColor3 = Color3.fromRGB(255, 255, 255)
StatsButton.Font = Enum.Font.Gotham
StatsButton.TextSize = 20
StatsButton.Parent = MainFrame

KillListButton.Name = "KillListButton"
KillListButton.Size = UDim2.new(0.9, 0, 0.1, 0)
KillListButton.Position = UDim2.new(0.05, 0, 0.3, 0)
KillListButton.BackgroundColor3 = Color3.fromRGB(200, 100, 100)
KillListButton.Text = "View Kill List"
KillListButton.TextColor3 = Color3.fromRGB(255, 255, 255)
KillListButton.Font = Enum.Font.Gotham
KillListButton.TextSize = 20
KillListButton.Parent = MainFrame

SettingsButton.Name = "SettingsButton"
SettingsButton.Size = UDim2.new(0.9, 0, 0.1, 0)
SettingsButton.Position = UDim2.new(0.05, 0, 0.45, 0)
SettingsButton.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
SettingsButton.Text = "Settings"
SettingsButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SettingsButton.Font = Enum.Font.Gotham
SettingsButton.TextSize = 20
SettingsButton.Parent = MainFrame

CloseButton.Name = "CloseButton"
CloseButton.Size = UDim2.new(0.9, 0, 0.1, 0)
CloseButton.Position = UDim2.new(0.05, 0, 0.6, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
CloseButton.Text = "Close GUI"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Font = Enum.Font.Gotham
CloseButton.TextSize = 20
CloseButton.Parent = MainFrame

--// Button Functions
StatsButton.MouseButton1Click:Connect(function()
    print("View Stats clicked") -- Implement stats viewing logic here
end)

KillListButton.MouseButton1Click:Connect(function()
    print("View Kill List clicked") -- Implement kill list viewing logic here
end)

SettingsButton.MouseButton1Click:Connect(function()
    print("Settings clicked") -- Implement settings logic here
end)

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy() -- Close the GUI
end)

--// User Input Handling
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.RightShift and not gameProcessed then
        ScreenGui.Enabled = not ScreenGui.Enabled -- Toggle GUI visibility with Right Shift
    end
end)

--// Function to Show GUI
function ShowGUI()
    ScreenGui.Enabled = true
end

--// Function to Hide GUI
function HideGUI()
    ScreenGui.Enabled = false
end

-- Show the GUI on startup
ShowGUI()
