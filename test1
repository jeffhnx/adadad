--// Services
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

--// Variables
local AimbotEnabled = false
local AimbotStrength = 0.5
local RightClickHeld = false
local refreshRate = 1 -- seconds

--// GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui

local AimbotToggleButton = Instance.new("TextButton")
AimbotToggleButton.Size = UDim2.new(0, 200, 0, 50)
AimbotToggleButton.Position = UDim2.new(0.5, -100, 0.5, -25)
AimbotToggleButton.Text = "Toggle Aimbot"
AimbotToggleButton.Parent = ScreenGui

--// Aimbot Function
local function Aimbot()
    if RightClickHeld and AimbotEnabled then
        local closestPlayer = nil
        local closestDistance = math.huge

        -- Loop through all players to find the closest one
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
                -- Check if player is an enemy (not on the same team)
                if player.Team ~= LocalPlayer.Team then
                    local targetPosition = player.Character.Head.Position + Vector3.new(0, 0.5, 0) -- Aim at head level
                    local screenPosition, onScreen = Camera:WorldToViewportPoint(targetPosition)

                    if onScreen then
                        local mousePosition = UserInputService:GetMouseLocation()
                        local distance = (Vector2.new(mousePosition.X, mousePosition.Y) - Vector2.new(screenPosition.X, screenPosition.Y)).Magnitude

                        if distance < closestDistance then
                            closestDistance = distance
                            closestPlayer = player
                        end
                    end
                end
            end
        end

        -- Aim at the closest playerâ€™s head
        if closestPlayer then
            local targetPosition = closestPlayer.Character.Head.Position + Vector3.new(0, 0.5, 0) -- Aim at head level
            local cameraCFrame = CFrame.new(Camera.CFrame.Position, targetPosition)
            Camera.CFrame = cameraCFrame:Lerp(Camera.CFrame, AimbotStrength) -- Smooth transition to target
        end
    end
end

--// User Input for Right-Click
UserInputService.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then
        RightClickHeld = true -- Right click held to enable aimbot
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then
        RightClickHeld = false -- Release right click to disable aimbot
    end
end)

--// Toggle Aimbot On/Off with GUI
AimbotToggleButton.MouseButton1Click:Connect(function()
    AimbotEnabled = not AimbotEnabled
    if AimbotEnabled then
        AimbotToggleButton.Text = "Aimbot ON"
    else
        AimbotToggleButton.Text = "Aimbot OFF"
    end
end)

--// Run Service Loop for Aimbot
RunService.RenderStepped:Connect(function()
    Aimbot()
end)
